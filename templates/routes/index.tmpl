{{template "layout" .}}

{{define "title"}}
<title>Home</title>
{{end}}


{{define "content"}}
<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4 container">

    {{template "htmlx/todos"}}

    <hr class="my-10 border-t-4"/>

    <div id="content" class="flex flex-wrap gap-1 justify-evenly w-full">
        {{template "htmlx/videos"}}

    </div>


    <div class="container w-96">
        <button
            type="button"
            class="button-common"
            hx-get="/htmlx/videos"
            hx-target="#content"
            hx-swap="beforeend"
        >
            {{template "components/loader" map "boxCSS" "htmx-indicator" "loadCSS" "w-4 h-4"}}
            <span class="btn-label-loader">
                Load more
            </span>
        </button>
    </div>
</div>
{{end}}