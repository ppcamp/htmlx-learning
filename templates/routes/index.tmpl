{{template "layout"}}

{{define "title"}}
<title>Home</title>
{{end}}


{{define "content"}}
<div class="max-w-screen-xl flex flex-wrap items-center justify-between mx-auto p-4 container">

    {{template "htmlx/todos"}}

    <hr class="my-10 border-t-4"/>

    <div id="content" class="flex flex-wrap gap-1 justify-evenly w-full">
    </div>


    <div class="container w-96">
        {{template "components/button/common" map
            "class" "btn"
            "label" "Load More videos"
            "icon" "a"
            "htmlx" `hx-get="/htmlx/videos"  hx-target="#content" hx-swap="afterbegin"`
        }}
    </div>
</div>
{{end}}